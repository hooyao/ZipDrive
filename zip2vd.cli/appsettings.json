{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "zip2vd": "Debug"
            }
        },
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "Enrich": [ "FromLogContext", "WithThreadId" ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "restrictedToMinimumLevel": "Verbose",
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {ThreadId}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}",
                    "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "%TEMP%\\zip2vdlogs\\zip2vd.log",
                    //"path": "./logs/zip2vd.log",
                    "fileSizeLimitBytes": "10000",
                    "rollOnFileSizeLimit": "true",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 5 // default: 31 files
                }
            }
        ]
    },
    "zip": {
        "MountPath": "R:\\",
        "SmallFileCacheSizeInMb": 1024,
        "LargeFileCacheDir": null,
        "SmallFileSizeCutoffInMb": 100,
        "LargeFileCacheSizeInMb": 10240,
        "MaxReadConcurrency": 4
    }
}